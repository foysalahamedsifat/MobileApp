        <layer-list>
            <item>
                <shape>
                    <stroke
                        android:width="0.1dip"
                        android:color="@color/purple_200" />
                    <corners android:radius="1dp" />
                    <solid android:color="@color/white"/>
                    <padding
                        android:bottom="5.0dip"
                        android:left="5.0dip"
